{
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ],
        "downlevelIteration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "strict": true,
        "target": "es2015"
    },
    "include": [
        "**/*.ts*",
        "**/*.json"
    ]
}
